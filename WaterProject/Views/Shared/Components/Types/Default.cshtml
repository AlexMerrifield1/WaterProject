@{
}

@model IEnumerable<string>
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-projecType="" asp-route-pageNum ="1" class="btn bth-outline-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-projectType="@t" asp-route-pageNum ="1" 
           class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "bth-outline-secondary")">@t</a>
    }
</div>